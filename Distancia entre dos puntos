#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int x1, x2, y1, y2;
    float distancia;
    
    cout<<"Calcular la distancia entre dos puntos"<<endl;
    cout<<"Ingresar la primera coordenada:"<<endl;
    cout<<"x1: ";
    cin>>x1;
    cout<<"y1: ";
    cin>>y1;
    cout<<" "<<endl;
    cout<<"Ingresar la segunda coordenada:"<<endl;
    cout<<"x2: ";
    cin>>x2;
    cout<<"y2: ";
    cin>>y2;
    
    distancia= sqrt(pow((x2-x1),2)+pow((y2-y1),2));
    
    cout<<"La distancia entre dos puntos es: "<<distancia;

    return 0;
}
