#include <iostream>
using namespace std;

//prototipo
int factorial(int n);

int main() {
	int n;
	do {
		cout << "Ingresar el numero para calcular su factorial: ";
		cin >> n;
	} while (n < 0);
	cout << "El resultado de " << n << "!" << " es: " << factorial(n);

	return 0;
}
int factorial(int n) {
	int fact = 1;
	for (int i=1; i<=n; i++)
	fact =fact* i;
	return fact;
}
