#include <iostream>
using namespace std;
int main()
{
    int opcion;
    float r, a, b;
    
    cout<<"Calculadora"<<endl;
    cout<<"Ingresar primer dato: "<<endl;
    cin>>a;
    cout<<"Ingresar segundo dato: "<<endl;
    cin>>b;
    
    cout<<"-------MENU-------"<<endl;
    cout<<"1.- Suma"<<endl;
    cout<<"2.- Resta"<<endl;
    cout<<"3.- Multiplicacion"<<endl;
    cout<<"4.- Division"<<endl;
    cout<<" "<<endl;
    cout<<"Elige una opcion: ";
    cin>>opcion;
    
    switch (opcion){
    case 1: r=a+b; break;
    case 2: r=a-b; break;
    case 3: r=a*b; break;
    case 4: r=a/b; break;
    default: cout<<"Opcion Invalida"<<endl;
    }
    
    cout<<"El resultado es: "<<r;
    return 0;
}
